{% extends 'base.html.twig' %}

{% block body %}
    <h1>Comment</h1>

    <table class="table-hover table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ comment.id }}</td>
            </tr>
            <tr>
                <th>Author</th>
                <td>{{ comment.author }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ comment.description }}</td>
            </tr>
        </tbody>
    </table>

    <ul style="display: flex; flex-direction: row; list-style: none;">
        <li>
            <a class="btn btn-warning" href="{{ path('comment_index') }}">Back to the list</a>
        </li>
        <li>
            <a class="btn btn-success" href="{{ path('comment_edit', { 'id': comment.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input class="btn btn-danger" type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
