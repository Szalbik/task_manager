{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form class="form-horizontal" action="{{ path("fos_user_security_check") }}" method="post">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
    {% endif %}

    <div class="form-group">
        <label for="username">Username</label>
        <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required"/>
    </div>



    <div class="form-group">
        <label for="password">Password</label>
        <input class="form-control" type="password" id="password" name="_password" required="required"/>
    </div>

    <div style="margin-bottom: 20px" class="checkbox">
        <label for="remember_me">
            <input type="checkbox" id="remember_me" name="_remember_me" value="on"/> Remember me
        </label>
    </div>


    <div class="form-group">
        <input class="btn btn-default" type="submit" id="_submit" name="_submit" value="Sign in"/>
    </div>

</form>
