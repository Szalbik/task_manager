{% extends 'base.html.twig' %}

{% block title %}
    TM - Tasks
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <h1>Tasks:</h1>
            <div class="pull-right">
                {{ form_start(form, { attr: { class: 'form-inline' } }) }}
                {{ form_widget(form.search, { attr: { placeholder: 'Search' } }) }}
                <button type="submit" class="btn">Search</button>
                {{ form_errors(form.search) }}
                {{ form_end(form) }}

            </div>


            <table class="table table-hover">
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Priority</th>
                    <th>Assigne to</th>
                    <th>Created At</th>
                    <th>Updated At</th>
                    <th>Actions</th>
                </tr>
                {% for task in tasks %}
                    <tr>
                        <td>{{ task.id }}</td>
                        <td>{{ task.name }}</td>
                        <td>{{ task.priority }}</td>
                        <td>{{ task.user.email }}</td>
                        <td>{{ task.createdAt }}</td>
                        <td>{{ task.updatedAt }}</td>
                        <td><a href="{{ url('show_task', {id: task.id}) }}">Show details</a></td>
                    </tr>
                {% endfor %}
            </table>
        </div>
    </div>
{% endblock %}

